{
  "name": "@sint-dashboard/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run db:push && tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@fastify/websocket": "^11.0.1",
    "@sint-dashboard/shared": "*",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.38.3",
    "fastify": "^5.2.0",
    "pg": "^8.18.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.8",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
